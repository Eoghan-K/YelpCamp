<% include ../partials/header %>

<div class="container">

        <h1 style="text-align:center;">Edit Comment</h1>
        
            <div class="form">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="comment">Comment:</label>
                        <input class="form-control" id="comment" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground_id %>">Go Back</a>
            </div>

</div>

<% include ../partials/footer %>