<% include ../partials/header %>

<div class="container">
    
    <header class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center">
        
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
        
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-sm-6 col-md-3">
                <figure class="img-thumbnail">
                    <img id="indexImg" src="<%= campground.image %>" class="figure-img img-fluid">
                    <figcaption class="figure-caption"><%= campground.name %></figcaption>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </figure>
            </div>
        <% }); %>
        
    </div>
    
</div>

<% include ../partials/footer %>