<% include ../partials/header %>

<div class="container">

        <h1 class="form-h1">Create a New Campground</h1>
        
            <div class="form">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label for="campgroundName">Campground Name:</label>
                        <input class="form-control" id="campgroundName" type="text" name="name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="campgroundPrice">Campground Price:</label>
                        <input class="form-control" id="campgroundPrice" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Image URL:</label>
                        <input class="form-control" id="imageUrl" type="text" name="image" placeholder="Image url">
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <input class="form-control" id="description" type="text" name="description" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>

</div>

<% include ../partials/footer %>